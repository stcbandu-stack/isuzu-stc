        "WIN": { bg: "#b8b8b8", text: "#ff0000" },
        "TIL": { bg: "#ff1800", text: "#afff00" },
        "Other": { bg: "#e5e7eb", text: "#374151" }
    };
    
    // Status config with colors
    const statusConfig = {
        "ส่งมอบแล้ว": { color: "bg-green-500 text-white border-green-700", icon: "fa-flag-checkered" },
        "ผ่านแล้วรอปล่อย": { color: "bg-teal-100 text-teal-800 border-teal-400", icon: "fa-check-circle" },
        "เซ็นแล้วรอตรวจสอบ / อนุมัติเบื้องต้น": { color: "bg-blue-100 text-blue-800 border-blue-400", icon: "fa-file-signature" },
        "รอเซ็นสัญญา": { color: "bg-purple-100 text-purple-800 border-purple-400", icon: "fa-pen-fancy" },
        "รอเอกสารครบ": { color: "bg-yellow-100 text-yellow-800 border-yellow-400", icon: "fa-file-invoice" },
        "รอคนค้ำ": { color: "bg-orange-100 text-orange-800 border-orange-400", icon: "fa-user-friends" },
        "รอเงินดาวน์ครบ": { color: "bg-lime-100 text-lime-800 border-lime-400", icon: "fa-coins" },
        "รอไฟแนนซ์": { color: "bg-cyan-100 text-cyan-800 border-cyan-400", icon: "fa-clock" },
        "จอง/ยังไม่ได้ส่งไฟแนนซ์": { color: "bg-gray-200 text-gray-700 border-gray-400", icon: "fa-bookmark" },
        "รีเจค": { color: "bg-red-600 text-white border-red-800", icon: "fa-ban" },
        "ไม่ผ่านเงื่อนไข / คุณสมบัติไม่ครบ": { color: "bg-red-100 text-red-800 border-red-400", icon: "fa-user-slash" },
