  <script>
    // Finance styles (same as old version)
    const financeStyles = {
        "TTB": { bg: "#4c7abd", text: "#ffff00" },
        "SCB": { bg: "#713896", text: "#ffc200" },
        "KLeasing": { bg: "#4ab958", text: "#ffffff" },
        "KKP": { bg: "#cec1d6", text: "#432856" },
        "NISSAN": { bg: "#f2f2f2", text: "#b71100" },
        "Krungsri": { bg: "#ffb600", text: "#3d3a34" },
