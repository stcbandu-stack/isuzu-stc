<MainLayout title="สรุปยอดจองมือสอง 2569 | Team Dashboard">
  <!-- Styles mimicking the reference -->
  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;600;700;800&display=swap');
    
