---
import MainLayout from "../../layouts/MainLayout.astro";
import AdminNav from "../../components/admin/AdminNav.vue";
import PromotionList from "../../components/admin/PromotionList.vue";

// Note: In a real app, you'd check session here.
// For now, we rely on RLS and client-side auth logic in components.
---

<MainLayout title="จัดการโปรโมชั่น - Admin Dashboard">
    <div class="min-h-screen bg-gray-900 pt-20 pb-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Static Admin Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-white mb-2">
                    ระบบหลังบ้าน (Admin Dashboard)
                </h1>
                <p class="text-gray-400">
                    จัดการข้อมูลโปรโมชั่นและแคมเปญพิเศษของอีซูซุ
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
                <!-- Sidebar Navigation -->
                <div class="lg:col-span-1">
                    <AdminNav activePage="promotions" client:load />
                </div>

                <!-- Main Content -->
                <div class="lg:col-span-3">
                    <div
                        class="bg-gray-800/50 rounded-2xl p-6 border border-gray-700"
                    >
                        <PromotionList client:load />
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>
