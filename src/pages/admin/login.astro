---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout title="Admin Login - ISUZU STC">
  <div class="min-h-screen flex items-center justify-center bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-gray-800 p-8 rounded-xl shadow-2xl border border-gray-700">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-white">
          เข้าสู่ระบบ Admin
        </h2>
        <p class="mt-2 text-center text-sm text-gray-400">
          สำหรับผู้ดูแลระบบเท่านั้น
        </p>
      </div>
      <form class="mt-8 space-y-6" id="loginForm">
        <input type="hidden" name="remember" value="true">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="email" class="sr-only">Email address</label>
            <input id="email" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-500 text-white bg-gray-700 rounded-t-md focus:outline-none focus:ring-isuzu-red focus:border-isuzu-red focus:z-10 sm:text-sm" placeholder="Email address">
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-500 text-white bg-gray-700 rounded-b-md focus:outline-none focus:ring-isuzu-red focus:border-isuzu-red focus:z-10 sm:text-sm" placeholder="Password">
          </div>
        </div>

        <div>
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-isuzu-red hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-isuzu-red transition-colors duration-200">
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-red-300 group-hover:text-red-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </span>
            Sign in
          </button>
        </div>
      </form>

      <!-- Divider -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-600"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-gray-800 text-gray-400">หรือ</span>
        </div>
      </div>

      <!-- Google Sign In Button -->
      <button id="googleSignIn" type="button" class="w-full flex items-center justify-center gap-3 py-2.5 px-4 border border-gray-600 rounded-md bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors duration-200">
        <img src="/google-logo.svg" alt="Google" class="w-5 h-5">
        <span class="text-gray-700 font-medium">เข้าสู่ระบบด้วย Google</span>
      </button>

      <div id="message" class="text-center text-sm text-red-500 mt-2"></div>
    </div>
  </div>
</MainLayout>

<script>
  import { supabase } from '../../lib/supabase';

  const loginForm = document.getElementById('loginForm');
  const messageEl = document.getElementById('message');
  const googleSignInBtn = document.getElementById('googleSignIn');

  if (loginForm) {
    loginForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      if (!messageEl) return;
      messageEl.textContent = 'Loading...';

      const formData = new FormData(e.target as HTMLFormElement);
      const email = formData.get('email') as string;
      const password = formData.get('password') as string;

      const { data, error } = await supabase.auth.signInWithPassword({
        email,
        password,
      });

      if (error) {
        messageEl.textContent = error.message;
      } else if (data.session) {
        // Store the access token in a cookie for server-side authentication
        const maxAge = 60 * 60 * 24 * 7; // 7 days
        document.cookie = `sb-access-token=${data.session.access_token}; path=/; max-age=${maxAge}; SameSite=Lax`;
        document.cookie = `sb-refresh-token=${data.session.refresh_token}; path=/; max-age=${maxAge}; SameSite=Lax`;
        
        messageEl.textContent = 'Success! Redirecting...';
        // Small delay to ensure cookies are set
        setTimeout(() => {
          window.location.href = '/admin/dashboard';
        }, 500);
      }
    });
  }

  // Google Sign In
  if (googleSignInBtn) {
    googleSignInBtn.addEventListener('click', async () => {
      if (messageEl) messageEl.textContent = 'กำลังเปลี่ยนเส้นทาง...';
      
      const { data, error } = await supabase.auth.signInWithOAuth({
        provider: 'google',
        options: {
          redirectTo: `${window.location.origin}/admin/callback`
        }
      });

      if (error && messageEl) {
        messageEl.textContent = error.message;
      }
    });
  }
</script>
