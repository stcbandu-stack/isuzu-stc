---
import MainLayout from '../../layouts/MainLayout.astro';
import DashboardBoxManager from '../../components/team/DashboardBoxManager.vue';
---

<MainLayout title="Dashboard Builder - ISUZU STC">
  <div class="min-h-screen bg-gradient-to-br from-gray-900 via-slate-900 to-gray-900">
    <!-- Header -->
    <header class="bg-gray-800/50 backdrop-blur-lg border-b border-gray-700/50 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-4">
            <a href="/team/dashboard" class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
            </a>
            <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
              </svg>
            </div>
            <div>
              <h1 class="text-xl font-bold text-white">Dashboard Builder</h1>
              <p class="text-xs text-gray-400">จัดการกล่องและเมนู</p>
            </div>
          </div>
          
          <div class="flex items-center gap-4">
            <span id="userEmail" class="text-sm text-gray-400 hidden sm:block">Loading...</span>
            <button 
              id="logoutBtn"
              class="flex items-center gap-2 px-4 py-2 text-sm text-gray-300 hover:text-white bg-gray-700/50 hover:bg-gray-700 rounded-lg transition-all duration-200"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              <span class="hidden sm:inline">ออกจากระบบ</span>
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Access Denied Message (Hidden by default) -->
    <div id="accessDenied" class="hidden max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center">
        <div class="w-20 h-20 mx-auto bg-red-500/20 rounded-full flex items-center justify-center mb-6">
          <svg class="w-10 h-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-white mb-2">ไม่มีสิทธิ์เข้าถึง</h2>
        <p class="text-gray-400 mb-6">เฉพาะ Superuser เท่านั้นที่สามารถเข้าถึงหน้านี้ได้</p>
        <a href="/team/dashboard" class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          กลับไปหน้า Dashboard
        </a>
      </div>
    </div>

    <!-- Main Content -->
    <main id="mainContent" class="hidden max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Quick Stats -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bg-gray-800/50 rounded-xl p-4 border border-gray-700/50">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400">จำนวนกล่อง</p>
              <p id="boxCount" class="text-2xl font-bold text-white">-</p>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-800/50 rounded-xl p-4 border border-gray-700/50">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400">จำนวนเมนู</p>
              <p id="menuCount" class="text-2xl font-bold text-white">-</p>
            </div>
          </div>
        </div>
        
        <a href="/team/permissions" class="bg-gray-800/50 rounded-xl p-4 border border-gray-700/50 hover:bg-gray-700/50 hover:border-orange-500/50 transition-all duration-200 group">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-orange-500/20 rounded-lg flex items-center justify-center group-hover:bg-orange-500/30 transition-colors">
              <svg class="w-5 h-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400">จัดการสิทธิ์</p>
              <p class="text-lg font-bold text-white group-hover:text-orange-400 transition-colors">Permissions</p>
            </div>
          </div>
        </a>
        
        <div class="bg-gray-800/50 rounded-xl p-4 border border-gray-700/50">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400">สถานะ</p>
              <p id="roleStatus" class="text-lg font-bold text-purple-400">Superuser</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Box Manager Component -->
      <div class="bg-gray-800/50 rounded-2xl p-6 border border-gray-700/50">
        <DashboardBoxManager client:only="vue" />
      </div>
    </main>

    <!-- Loading State -->
    <div id="loadingState" class="flex flex-col items-center justify-center py-20">
      <div class="w-12 h-12 border-4 border-purple-500 border-t-transparent rounded-full animate-spin mb-4"></div>
      <p class="text-gray-400">กำลังตรวจสอบสิทธิ์...</p>
    </div>
  </div>
</MainLayout>

<script>
  import { supabase, signOutAndClearStorage } from '../../lib/supabase';

  const userEmailEl = document.getElementById('userEmail');
  const logoutBtn = document.getElementById('logoutBtn');
  const mainContent = document.getElementById('mainContent');
  const accessDenied = document.getElementById('accessDenied');
  const loadingState = document.getElementById('loadingState');
  const boxCountEl = document.getElementById('boxCount');
  const menuCountEl = document.getElementById('menuCount');

  async function init() {
    const { data: { session } } = await supabase.auth.getSession();
    
    if (!session) {
      window.location.href = '/team/login';
      return;
    }

    if (userEmailEl) {
      userEmailEl.textContent = session.user.email || 'Unknown';
    }

    // Check if user is superuser
    const { data: roleData } = await supabase
      .from('user_roles')
      .select('role')
      .eq('user_id', session.user.id)
      .single();

    if (loadingState) loadingState.classList.add('hidden');

    if (!roleData || roleData.role !== 'superuser') {
      if (accessDenied) accessDenied.classList.remove('hidden');
      return;
    }

    if (mainContent) mainContent.classList.remove('hidden');

    // Load stats
    const { data: boxes } = await supabase
      .from('dashboard_boxes')
      .select('id');
    
    const { data: menuItems } = await supabase
      .from('dashboard_menu_items')
      .select('id');

    if (boxCountEl) boxCountEl.textContent = String(boxes?.length || 0);
    if (menuCountEl) menuCountEl.textContent = String(menuItems?.length || 0);
  }

  if (logoutBtn) {
    logoutBtn.addEventListener('click', async () => {
      await signOutAndClearStorage();
      window.location.href = '/team/login';
    });
  }

  init();
</script>
