    // Main Function
    window.loadData = async function() {
      const loading = document.getElementById('loading');
      const content = document.getElementById('dashboard-content');
      const errorState = document.getElementById('error-state');
      const monthFilter = document.getElementById('month-filter');
      
      loading.classList.remove('hidden');
      content.classList.add('hidden');
      errorState.classList.add('hidden');
      
      try {
        const month = monthFilter.value;
        const response = await fetch(`/api/sheets/usedcar-tracking?month=${month}`);
        if (!response.ok) throw new Error(`HTTP Error: ${response.status}`);
        
        const result = await response.json();
        const records = result.records || [];
        
        // Group data by branch for display
        const groupedData = processData(records);
        
        renderDashboard(groupedData);
        loading.classList.add('hidden');
        content.classList.remove('hidden');
        
      } catch (error) {
        console.error('Error loading data:', error);
        loading.classList.add('hidden');
        errorState.classList.remove('hidden');
        document.getElementById('error-message').textContent = error.message;
      }
    };

    function processData(records) {
        // Initialize branch data
        const branchData = {};
        branches.forEach(b => {
            branchData[b] = {
                totalCases: 0,
                currentCases: 0,
                carriedOver: 0,
                cashPurchase: 0,
                finance: {},
                financeDetails: {},
                status: {},
                brands: {},
                models: [],
                downBuckets: { free: 0, low: 0, normal: 0, high: 0, heavy: 0 }
            };
            // Init finance keys
            Object.keys(financeStyles).forEach(f => {
                branchData[b].finance[f] = { old: 0, current: 0, total: 0 };
            });
            // Init status keys
            statusList.forEach(s => branchData[b].status[s] = 0);
        });

        records.forEach(record => {
            let branchRaw = (record.dealer_branch || '').trim();
            if (!branchRaw) return;

            // Apply branch mapping
            if (branchMapping[branchRaw]) branchRaw = branchMapping[branchRaw];

            // Determine target branches (always include "รวมทั้งหมด")
            let targetBranches = ["รวมทั้งหมด"];
            if (branches.includes(branchRaw)) {
                targetBranches.push(branchRaw);
            } else {
                const match = branches.find(b => branchRaw.includes(b));
                if (match) targetBranches.push(match);
            }

            const isCurrent = record.is_current_month;
            const financeRaw = (record.fin || 'Other').trim();
            const statusRaw = (record.case_status || '').trim();
            const brandRaw = (record.car_brand || '').trim();
            const modelRaw = (record.car_model || '').trim();
            const rawDown = (record.dealer_down || '').toString();
            const downMatch = rawDown.match(/-?\d+(\.\d+)?/);
            const downPercent = downMatch ? parseFloat(downMatch[0]) : null;

            targetBranches.forEach(bKey => {
                const stats = branchData[bKey];
                if (!stats) return;

                stats.totalCases++;

                // Current vs Carried Over
                if (isCurrent) stats.currentCases++;
                else stats.carriedOver++;

                // Cash purchase
                if (financeRaw.includes('สด') || financeRaw.includes('Cash')) {
                    stats.cashPurchase++;
                }

                // Finance key normalization
                let financeKey = "Other";
                for (const key in financeStyles) {
                    if (key === "Other") continue;
                    if (financeRaw.toLowerCase().includes(key.toLowerCase())) {
                        financeKey = key;
                        break;
                    }
                }
                // Additional mappings
                if (financeRaw.includes('ทหารไทย')) financeKey = 'TTB';
                if (financeRaw.includes('ไทยพาณิชย์')) financeKey = 'SCB';
                if (financeRaw.includes('กสิกร')) financeKey = 'KLeasing';
                if (financeRaw.includes('เกียรตินาคิน')) financeKey = 'KKP';
                if (financeRaw.includes('นิสสัน')) financeKey = 'NISSAN';
                if (financeRaw.includes('กรุงศรี')) financeKey = 'Krungsri';
                if (financeRaw.includes('สด') || financeRaw.includes('Cash')) financeKey = 'ซื้อสด';

                if (!stats.finance[financeKey]) {
                    stats.finance[financeKey] = { old: 0, current: 0, total: 0 };
                }

                if (isCurrent) stats.finance[financeKey].current++;
                else stats.finance[financeKey].old++;
                stats.finance[financeKey].total++;

                // Status
                let matchedStatus = statusList.find(s => s === statusRaw);
                if (!matchedStatus) matchedStatus = statusList.find(s => statusRaw.includes(s));
                const finalStatus = matchedStatus || "อื่นๆ";

                if (stats.status[finalStatus] !== undefined) stats.status[finalStatus]++;
                else stats.status["อื่นๆ"]++;

                // Finance Details (status per finance)
                if (!stats.financeDetails[financeKey]) stats.financeDetails[financeKey] = {};
                if (!stats.financeDetails[financeKey][finalStatus]) stats.financeDetails[financeKey][finalStatus] = 0;
                stats.financeDetails[financeKey][finalStatus]++;

                // Brand & Model
                if (brandRaw) {
                    stats.brands[brandRaw] = (stats.brands[brandRaw] || 0) + 1;
                    stats.models.push({ brand: brandRaw, model: modelRaw });
                }

                if (downPercent !== null && !Number.isNaN(downPercent)) {
                    const bucketKey = getDownBucketKey(downPercent);
                    stats.downBuckets[bucketKey] = (stats.downBuckets[bucketKey] || 0) + 1;
                }
            });
        });

        return branchData;
    }

